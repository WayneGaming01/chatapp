<div
  class="profile_modal opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center"
>
  <div
    class="profile_modal-overlay absolute w-full h-full bg-gray-900 dark:bg-neutral-900 opacity-50"
  ></div>

  <div
    class="modal-container bg-neutral-200 dark:bg-neutral-800 w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto"
  >
    <div class="modal-content py-4 text-left px-6">
      <div class="flex justify-between items-center pb-3">
        <p class="text-2xl font-bold dark:text-white text-neutral-800">
          <%= user.username %>'s Profile
        </p>
      </div>
      <!-- <span class="text-neutral-700 dark:text-neutral-300">
        Profile url: <%= user_.profile_url %><br />
        Joined at: <%= user_.created_at %>
      </span> -->

      <div class="flex items-center gap-2">
        <img src="/library/img/user/coldset/profile/<%= user_.avatar %>" alt="Profile" class="border-solid border-2 border-green-500 h-24 w-24 rounded-full p-1">
        <span class="text-xl text-neutral-700 dark:text-neutral-300"><%= user_.username %></span>
      </div>
      <div class="bg-neutral-300 dark:bg-neutral-900 p-4 rounded-md mb-5 mt-5">
        <span class="dark:text-white text-sm text-neutral-700">
            <% if(user_.bio === "") { %>
                There's nothing to show here.
            <% } else { %>
                <%= user_.bio %>
            <% } %>
        </span>
        <br>
        <h1 class="mt-5 text-md capitalize font-medium dark:text-white text-neutral-700">
            Account created
        </h1>
        <p class="text-sm dark:text-white text-neutral-700">
            <%= user_.created_at %>
        </p>
      </div>
      <div class="flex justify-end pt-2">
        <a href="<%= user_.profile_url %>" target="_blank">
          <button
            class="mr-2 transition ease-in px-4 dark:hover:text-neutral-700 dark:hover:bg-neutral-600 p-3 rounded-sm text-neutral-700 dark:text-white hover:bg-neutral-400"
          >
            Visit
          </button>
        </a>
        <button
          class="transition ease-in profile_modal-close px-4 dark:hover:text-neutral-700 dark:hover:bg-neutral-600 dark:bg-neutral-500 p-3 rounded-sm text-white bg-neutral-500 hover:bg-neutral-400"
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>
